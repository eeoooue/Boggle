
@using BGL_Library

<MudGrid>
	@for(int i=0; i<4; i++)
	{
		@for(int j=0; j<4; j++)
		{
			<BoggleTile TileText="@GetTileLetter(i, j)"></BoggleTile>
		}
	}
</MudGrid>

@code {

	[Parameter]
	public BoggleGame Game { get; set; }

	string GetTileLetter(int i, int j)
	{
		string[,] tiles = Game.GetGrid();
		return tiles[i, j];
	}
}
