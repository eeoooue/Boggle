<UserControl x:Class="BoggleWPF.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BoggleWPF.Views"
             mc:Ignorable="d" >
    
    <StackPanel HorizontalAlignment="Center" Margin="10" Width="200">
        <TextBlock Text="{Binding Title}" Margin="5" Foreground="DarkSlateBlue" HorizontalAlignment="Center" FontSize="40" />
        <TextBlock Text="{Binding Message}" Margin="5" HorizontalAlignment="Center" FontSize="20" />
    </StackPanel>
</UserControl>
